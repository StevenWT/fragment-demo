<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.steven.fragment">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.steven.fragment.FragmentApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.steven.fragment.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".original.OriginalFragmentActivity" />
        <activity android:name=".fragmentation.FragmentationActivity" />
        <activity android:name=".navigation.NavigationActivity" />
    </application>

</manifest>
